#averages-by-type.lot-detail
  .lot-detail-wrapper
    .lot-detail-header.d-flex.justify-content-between.flex-wrap.bg-primary.text-white.px-4
      .d-flex.align-items-center.flex-wrap.py-3
        h4.m-0 
          | Precios de ganado
      .d-flex.justify-content-between.align-items-center.flex-wrap.py-3
        i.averages-by-type-close.mdi.mdi-close.icon-md
                  
    .row.d-sm-none.d-flex.mt-5.pt-4
      .col-md-12
        .card.border-0
          .card-body    
            h3.mb-3.text-uppercase
              | Bovinos
            .table-responsive
              table.table.table-striped
                tbody
                  each avgItem in cattleTypesAverages
                    if(avgItem.family == "bovinos")
                      tr 
                        td
                          | #{avgItem.name}
                        td.text-center
                          b #{avgItem.avgPrice_1} 
                        td.text-center
                          if(avgItem.avgPrice_1 == avgItem.avgPriceOld_1)
                            span.text-primary =&nbsp;
                          if(avgItem.avgPrice_1 < avgItem.avgPriceOld_1)
                            i.mdi.mdi-arrow-down.text-danger
                            span.text-danger #{Math.round((1-avgItem.avgPrice_1/avgItem.avgPriceOld_1) *100)}%&nbsp;
                          if(avgItem.avgPrice_1 > avgItem.avgPriceOld_1)
                            i.mdi.mdi-arrow-up.text-success
                            span.text-success #{Math.round((1-avgItem.avgPriceOld_1/avgItem.avgPrice_1) *100)}%&nbsp;

