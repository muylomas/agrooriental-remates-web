extends ./home-baseHTML.pug

block content 
  link(href='/remate/styles.css', rel='stylesheet', type='text/css')
  link(href='/vendors/jquery_toast/jquery.toast.min.css', rel='stylesheet', type='text/css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js')
  script(src='https://code.jquery.com/ui/1.14.1/jquery-ui.min.js')

  .content-wrapper.bg-agrooriental.p-0.m-0
       
    include remate-includes/header.pug 

    .row.mb-2
      .col-12.position-relative(style="background:#1a1a1a")
        img.mobile-only.w-100(src="https://agro-oriental-remates.s3.us-west-1.amazonaws.com/web/images/banners/chimango-11-12-2025.jpg?v=3122025")
        img.desktop-only.w-50.mx-auto(src="https://agro-oriental-remates.s3.us-west-1.amazonaws.com/web/images/banners/chimango-11-12-2025-desktop.jpg?v=3122025")
        .position-absolute.top-0.end-0.pe-2.pt-2(onclick="auctionInfo()")
            i.mdi.mdi-information-outline.icon-md.text-warning

    #remate-lotes.row.portfolio-grid
      #filtros-remate.d-none
        card.border-0.d-flex.align-items-center.text-white.m-4.my-3
          h4.m-0.me-3
            | Lote:
          input.form-control.text-center.fs-4.p-2(type="number", name="filtro-lot-id", value="" style="width: 70px;")
          button.btn.bid-action-button.fs-5(onclick="goToLotById()") 
            | Ir 

      #loading-lots.pt-5.pb-3.m-0
        h3.text-center.text-white Buscando lotes del remate...
        .loading-image.mx-auto
          img.w-100(src="https://agro-oriental-remates.s3.us-west-1.amazonaws.com/web/images/transparent-pixel.png")

    footer.bg-dark.text-white.p-4.pt-5
      h4.mb-4
        b Contáctenos
      p 
        span.fs-6 
          b Teléfono
        | :
        br
        | (+598) 2604 3036, (+598) 99 647 561
      p 
        span.fs-6 
          b Dirección
        | :
        br
        | Gral. Domingo French 1948,
        br
        | Montevideo, 
        br
        | Uruguay
      p   
        span.fs-6 
          b Horarios
        | :
        br
        | Lunes a Viernes: 9:00 hrs. a 18:00 hrs.


      .mobile-only.border-top.mt-4.pt-4
        .d-block
          .w-100
            .text-center.mb-3.w-100
              a(href='https://agrooriental.uy/')
                img(src='https://agrooriental.uy/wp-content/uploads/2020/09/logo_agrooriental-e1601025470942.png' srcset='https://agrooriental.uy/wp-content/uploads/2020/09/logo_agrooriental-e1601025470942.png 120w, https://agrooriental.uy/wp-content/uploads/2020/09/logo_agrooriental-e1601025470942.png 120w' width='120' height='60' sizes='120px' alt='Agrooriental')
          .w-100.text-center
            | Desarrollado para Agrooriental. Todos los derechos reservados.
      .desktop-only.align-items-center.border-top.mt-4.pt-4
        a(href='https://agrooriental.uy/')
          img.me-3(src='https://agrooriental.uy/wp-content/uploads/2020/09/logo_agrooriental-e1601025470942.png' srcset='https://agrooriental.uy/wp-content/uploads/2020/09/logo_agrooriental-e1601025470942.png 120w, https://agrooriental.uy/wp-content/uploads/2020/09/logo_agrooriental-e1601025470942.png 120w' width='120' height='60' sizes='120px' alt='Agrooriental')   
        | Desarrollado para Agrooriental. Todos los derechos reservados.


  script.
    var lots = !{JSON.stringify(lots)};
    const userId = #{userId};
    const activeAuctionBids = !{JSON.stringify(activeAuctionBids)};
    const activeAuctionBidsLotIds = [];
    const customerFarms = !{("farms" in customer && customer.farms.length) ? JSON.stringify(customer.farms) : "[]"};
    const customerLatLng = !{("farms" in customer && customer.farms.length) ? "{lat: " + customer.farms[0].latitude + ", lng: " + customer.farms[0].longitude + ",}" : "{lat: -32.91738186664808, lng: -55.924416022336466,}"};
    var startDates = {};
    var endDates = {};

    var countdownTimers = {};
  
  script(src='/sweetalert.min.js')
  script(src='/vendors/jquery_toast/jquery.toast.min.js')
  script(src='/majestic/owlcarousel/owl.carousel.min.js')
  script(src='/remate/scripts.js')
  script(src='/remate/search-scripts.js')
  script(src='/remate/chat-scripts.js')
  script(src='/remate/lot-template.js')
  script(src='/remate/lot-scripts.js')
  script(src='/remate/auctions.js')      
